{
  "name": "hexx",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "example"
    ]
  },
  "scripts": {
    "dev": "yarn preconstruct dev && yarn workspace example dev",
    "build": "yarn build:pkg && yarn workspace example build",
    "build:pkg": "yarn preconstruct build",
    "changeset": "changeset",
    "release": "yarn build:pkg && changeset publish --access public",
    "start": "yarn workspace example start"
  },
  "devDependencies": {
    "@preconstruct/cli": "^2.1.0",
    "@svgr/cli": "^5.5.0",
    "@types/node": "^15.12.5",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/uuid": "^8.3.0",
    "typescript": "^4.3.4"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0",
    "prettier": "^2.3.2"
  }
}
